AWS_REGION=ap-south-1
ACCOUNT_ID=$(aws sts get-caller-identity --query Account --output text)

# create (idempotent)
aws ecr create-repository --repository-name brain-task --region $AWS_REGION || true

# login
aws ecr get-login-password --region $AWS_REGION \
  | docker login --username AWS --password-stdin $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com

# tag & push
docker tag brain-task:latest $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/brain-task:latest
docker push $ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/brain-task:latest
